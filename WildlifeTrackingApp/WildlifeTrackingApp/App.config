<?xml version="1.0" encoding="utf-8" ?>
<configuration>
   <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <appSettings>
    <add key="WildLifeTrackerServiceBaseURL" value="http://localhost:58640/" />
  </appSettings>
  <log4net>
    <root>
      <level value="ALL" />
      <!--Set root logger level to all-->
      <appender-ref ref="LogFileAppender" />
      <!--The name of the Appenders to invoke asynchronously. Multiple AppenderRef elements can be configured.-->
    </root>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="./Logs/log.txt"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <param name="AppendToFile" value="true"/>
      <datePattern value="dd.MM.yyyy'.log'"/>
      <rollingStyle value="Date"/>
      <maxSizeRollBackups value="10000"/>
      <staticLogFileName value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%date %-5level - %message%newline"/>
      </layout>
    </appender>
  </log4net>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
</configuration>
 